<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Heading -->
    <RelativeLayout
        android:id="@+id/headingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/notificationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Sound -->
    <RelativeLayout
        android:id="@+id/soundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingLayout"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/soundTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sound"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Switch
            android:id="@+id/switchSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Vibrate -->
    <RelativeLayout
        android:id="@+id/vibrateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soundLayout"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/vibrateTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Vibrate"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Switch
            android:id="@+id/switchVibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- New Tips Available -->
    <RelativeLayout
        android:id="@+id/newTipsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vibrateLayout"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/newTipsTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="New Tips Available"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Switch
            android:id="@+id/switchNewTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- New Service Available -->
    <RelativeLayout
        android:id="@+id/newServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTipsLayout"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/newServiceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Service Available"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <Switch
            android:id="@+id/switchNewService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
